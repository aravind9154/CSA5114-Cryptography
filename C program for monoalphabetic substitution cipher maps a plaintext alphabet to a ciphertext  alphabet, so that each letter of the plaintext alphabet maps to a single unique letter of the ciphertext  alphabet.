#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char plaintext[200], ciphertext[200];
    char key[27]; // substitution key (26 letters + null terminator)

    printf("Enter the 26-letter substitution key (A-Z): ");
    scanf("%26s", key);

    // Validate key: must be 26 alphabetic chars
    for (int i = 0; i < 26; i++) {
        if (!isalpha(key[i])) {
            printf("Invalid key! All characters must be letters.\n");
            return 1;
        }
        key[i] = toupper(key[i]);  // Convert to uppercase
    }

    // Clear buffer after scanf
    getchar();

    printf("Enter plaintext: ");
    fgets(plaintext, sizeof(plaintext), stdin);

    // Encryption
    for (int i = 0; plaintext[i] != '\0'; i++) {
        if (isalpha(plaintext[i])) {
            int index = toupper(plaintext[i]) - 'A';  // 0-25
            char enc = key[index]; // substitute

            // Preserve original case
            ciphertext[i] = islower(plaintext[i]) ? tolower(enc) : enc;
        } else {
            ciphertext[i] = plaintext[i]; // non-letters unchanged
        }
    }

    ciphertext[strlen(plaintext)] = '\0'; // null-terminate

    printf("Ciphertext: %s\n", ciphertext);

    return 0;
}
