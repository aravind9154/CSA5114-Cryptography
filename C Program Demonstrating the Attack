#include <stdio.h>
#include <stdlib.h>

// Fast modular exponentiation
long long modexp(long long base, long long exp, long long mod) {
    long long result = 1;
    base = base % mod;
    while (exp > 0) {
        if (exp % 2 == 1)
            result = (result * base) % mod;
        exp = exp >> 1;
        base = (base * base) % mod;
    }
    return result;
}

int main() {
    // Simulated RSA public key
    long long n = 3599;     // Example modulus (large in real RSA)
    long long e = 31;       // Large exponent

    // Example encrypted message (ciphertext numbers)
    long long ciphertext[] = { 2047, 2790, 2146, 2790, 2163 };
    int len = 5;

    // Step 1: Attacker computes all 26 possible letter encryptions
    long long lookup[26];
    for (int i = 0; i < 26; i++) {
        lookup[i] = modexp(i, e, n);
        printf("Plain %2d -> Cipher %4lld\n", i, lookup[i]);
    }

    printf("\n=== Decrypting Message Using Lookup Table ===\n");

    // Step 2: Attacker recovers plaintext via table lookup
    for (int c = 0; c < len; c++) {
        for (int p = 0; p < 26; p++) {
            if (lookup[p] == ciphertext[c]) {
                printf("%c", 'A' + p);
                break;
            }
        }
    }

    printf("\n\nConclusion: RSA encrypting each letter separately is NOT secure.\n");
    printf("An attacker can match ciphertexts to the 26 possible RSA outputs.\n");

    return 0;
}
