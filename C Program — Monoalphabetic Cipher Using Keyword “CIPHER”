#include <stdio.h>
#include <string.h>
#include <ctype.h>

void generateCipher(char cipher[]) {
    char keyword[] = "CIPHER";
    int used[26] = {0};
    int index = 0;

    // Add keyword characters first
    for (int i = 0; keyword[i] != '\0'; i++) {
        char ch = toupper(keyword[i]);
        if (!used[ch - 'A']) {
            cipher[index++] = ch;
            used[ch - 'A'] = 1;
        }
    }

    // Add remaining unused letters
    for (char ch = 'A'; ch <= 'Z'; ch++) {
        if (!used[ch - 'A']) {
            cipher[index++] = ch;
        }
    }
}

void encrypt(char plaintext[], char cipher[]) {
    printf("\nEncrypted Text: ");
    for (int i = 0; plaintext[i] != '\0'; i++) {
        char ch = tolower(plaintext[i]);

        if (ch >= 'a' && ch <= 'z') {
            int pos = ch - 'a';
            printf("%c", cipher[pos]);
        } else {
            // Print non-letters unchanged
            printf("%c", plaintext[i]);
        }
    }
}

int main() {
    char plaintext[200];
    char cipher[26];

    // Generate cipher alphabet from keyword CIPHER
    generateCipher(cipher);

    printf("Monoalphabetic Cipher Using Keyword 'CIPHER'\n");
    printf("Enter plaintext: ");
    fgets(plaintext, sizeof(plaintext), stdin);

    encrypt(plaintext, cipher);

    return 0;
}
