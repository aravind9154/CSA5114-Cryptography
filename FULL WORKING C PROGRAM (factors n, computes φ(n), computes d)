#include <stdio.h>

// Extended Euclid Algorithm to find modular inverse
int extended_gcd(int a, int b, int *x, int *y) {
    if (a == 0) {
        *x = 0;
        *y = 1;
        return b;
    }
    int x1, y1;
    int gcd = extended_gcd(b % a, a, &x1, &y1);

    *x = y1 - (b / a) * x1;
    *y = x1;

    return gcd;
}

// modular inverse of e mod phi
int mod_inverse(int e, int phi) {
    int x, y;
    int g = extended_gcd(e, phi, &x, &y);

    if (g != 1)
        return -1;

    int d = (x % phi + phi) % phi;
    return d;
}

int main() {
    int n = 3599;
    int e = 31;
    int p = 0, q = 0;

    // Step 1: find p and q by trial division
    for (int i = 2; i * i <= n; i++) {
        if (n % i == 0) {
            p = i;
            q = n / i;
            break;
        }
    }

    printf("p = %d, q = %d\n", p, q);

    // Step 2: compute phi(n)
    int phi = (p - 1) * (q - 1);
    printf("phi(n) = %d\n", phi);

    // Step 3: compute private key d
    int d = mod_inverse(e, phi);
    printf("Private key d = %d\n", d);

    return 0;
}
