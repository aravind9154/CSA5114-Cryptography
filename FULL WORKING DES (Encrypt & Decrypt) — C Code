// ---------------------------------------------------------
// Helper: get bit
// ---------------------------------------------------------
int getbit(uint64_t block, int pos) {
    return (block >> (64 - pos)) & 1;
}

// ---------------------------------------------------------
// Helper: set bit
// ---------------------------------------------------------
void setbit(uint64_t *block, int pos, int val) {
    if (val) *block |= ((uint64_t)1 << (64 - pos));
}

// ---------------------------------------------------------
// Permutation function
// ---------------------------------------------------------
uint64_t permute(uint64_t in, int *pt, int n) {
    uint64_t out = 0;
    for (int i = 1; i <= n; i++)
        setbit(&out, i, getbit(in, pt[i - 1]));
    return out;
}

// ---------------------------------------------------------
// Left rotate 28-bit halves
// ---------------------------------------------------------
uint32_t rol28(uint32_t x, int s) {
    return ((x << s) & 0x0FFFFFFF) | (x >> (28 - s));
}

// ---------------------------------------------------------
// Key schedule: generates 16 subkeys (48 bits each)
// ---------------------------------------------------------
void generate_keys(uint64_t key, uint64_t subkeys[16]) {

    uint64_t perm_key = permute(key, PC1, 56);

    uint32_t C = (perm_key >> 28) & 0x0FFFFFFF;
    uint32_t D = perm_key & 0x0FFFFFFF;

    for (int i = 0; i < 16; i++) {
        C = rol28(C, SHIFTS[i]);
        D = rol28(D, SHIFTS[i]);

        uint64_t cd = ((uint64_t)C << 28) | D;
        subkeys[i] = permute(cd, PC2, 48);
    }
}

// ---------------------------------------------------------
// F-function
// ---------------------------------------------------------
uint32_t feistel(uint32_t R, uint64_t K) {
    uint64_t E_R = permute((uint64_t)R << 32, E, 48);

    uint64_t x = E_R ^ K;

    int s_out = 0;
    uint32_t out = 0;

    for (int i = 0; i < 8; i++) {
        int chunk = (x >> (42 - 6 * i)) & 0x3F;
        int row = ((chunk & 0x20) >> 4) | (chunk & 0x01);
        int col = (chunk >> 1) & 0x0F;
        int val = SBOX[i][row][col];

        out |= val << (28 - 4 * i);
    }

    out = permute((uint64_t)out << 32, P, 32);

    return out;
}

// ---------------------------------------------------------
// DES Encryption/Decryption
// ---------------------------------------------------------
uint64_t des(uint64_t block, uint64_t key, int mode) {

    uint64_t subkeys[16];
    generate_keys(key, subkeys);

    uint64_t ip = permute(block, IP, 64);

    uint32_t L = ip >> 32;
    uint32_t R = ip & 0xFFFFFFFF;

    for (int i = 0; i < 16; i++) {

        uint32_t prev_L = L;
        uint32_t prev_R = R;

        uint32_t f;

        if (mode == 0)   // 0 = encrypt
            f = feistel(R, subkeys[i]);
        else             // 1 = decrypt
            f = feistel(R, subkeys[15 - i]);

        L = prev_R;
        R = prev_L ^ f;
    }

    uint64_t preout = ((uint64_t)R << 32) | L;

    return permute(preout, FP, 64);
}

// ---------------------------------------------------------
// Main
// ---------------------------------------------------------
int main() {

    uint64_t plaintext  = 0x0123456789ABCDEFULL;
    uint64_t key        = 0x133457799BBCDFF1ULL;

    uint64_t cipher = des(plaintext, key, 0);
    uint64_t plain2 = des(cipher, key, 1);

    printf("PLAINTEXT  : %016lX\n", plaintext);
    printf("KEY        : %016lX\n", key);
    printf("CIPHERTEXT : %016lX\n", cipher);
    printf("DECRYPTED  : %016lX\n", plain2);

    return 0;
}
