#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define SIZE 5

// Function to generate 5x5 key matrix
void generateKeyMatrix(char key[], char matrix[SIZE][SIZE]) {
    int used[26] = {0};
    int row = 0, col = 0;

    used['J' - 'A'] = 1;  // I/J combine

    // Insert key
    for (int i = 0; key[i] != '\0'; i++) {
        char ch = toupper(key[i]);

        if (ch < 'A' || ch > 'Z') continue;
        if (ch == 'J') ch = 'I';

        if (!used[ch - 'A']) {
            matrix[row][col] = ch;
            used[ch - 'A'] = 1;
            col++;

            if (col == SIZE) {
                col = 0;
                row++;
            }
        }
    }

    // Insert remaining letters
    for (char ch = 'A'; ch <= 'Z'; ch++) {
        if (!used[ch - 'A']) {
            matrix[row][col] = ch;
            col++;
            if (col == SIZE) {
                col = 0;
                row++;
            }
        }
    }
}

// Find position of character in matrix
void findPosition(char matrix[SIZE][SIZE], char ch, int *row, int *col) {
    if (ch == 'J') ch = 'I';
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            if (matrix[i][j] == ch) {
                *row = i;
                *col = j;
                return;
            }
        }
    }
}

// Preprocess text into digraphs
void preprocessText(char text[], char processed[]) {
    int len = 0;

    // Remove spaces and convert to uppercase
    for (int i = 0; text[i] != '\0'; i++) {
        if (isalpha(text[i])) {
            processed[len++] = toupper(text[i] == 'J' ? 'I' : text[i]);
        }
    }

    processed[len] = '\0';

    char temp[300];
    int idx = 0;

    // Make digraphs
    for (int i = 0; i < len; i++) {
        temp[idx++] = processed[i];

        if (i + 1 < len) {
            if (processed[i] == processed[i + 1]) {
                temp[idx++] = 'X';
            } else {
                temp[idx++] = processed[++i];
            }
        }
    }

    // If odd number of letters, add X
    if (idx % 2 != 0) {
        temp[idx++] = 'X';
    }

    temp[idx] = '\0';
    strcpy(processed, temp);
}

// Encrypt
void encrypt(char processed[], char matrix[SIZE][SIZE], char result[]) {
    int len = strlen(processed);
    int idx = 0;

    for (int i = 0; i < len; i += 2) {
        char a = processed[i];
        char b = processed[i + 1];

        int r1, c1, r2, c2;
        findPosition(matrix, a, &r1, &c1);
        findPosition(matrix, b, &r2, &c2);

        if (r1 == r2) {  // same row
            result[idx++] = matrix[r1][(c1 + 1) % SIZE];
            result[idx++] = matrix[r2][(c2 + 1) % SIZE];
        }
        else if (c1 == c2) {  // same column
            result[idx++] = matrix[(r1 + 1) % SIZE][c1];
            result[idx++] = matrix[(r2 + 1) % SIZE][c2];
        }
        else {  // rectangle rule
            result[idx++] = matrix[r1][c2];
            result[idx++] = matrix[r2][c1];
        }
    }

    result[idx] = '\0';
}


// ========================= MAIN FUNCTION (NO ERROR) ========================= //

int main() {
    char key[100], plaintext[300], processed[300], result[300];
    char matrix[SIZE][SIZE];

    printf("Enter the keyword: ");
    scanf("%s", key);

    printf("Enter the plaintext: ");
    getchar(); // clear buffer
    fgets(plaintext, sizeof(plaintext), stdin);

    generateKeyMatrix(key, matrix);
    preprocessText(plaintext, processed);
    encrypt(processed, matrix, result);

    printf("\n5x5 Key Matrix:\n");
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            printf("%c ", matrix[i][j]);
        }
        printf("\n");
    }

    printf("\nProcessed Text (Digraphs): %s\n", processed);
    printf("Encrypted Ciphertext: %s\n", result);

    return 0;
}
