#include <stdio.h>
#include <stdlib.h>

// Function to compute gcd
long long gcd(long long a, long long b) {
    while (b != 0) {
        long long t = b;
        b = a % b;
        a = t;
    }
    return a;
}

// Extended Euclidean algorithm to find modular inverse
long long modInverse(long long a, long long m) {
    long long m0 = m, t, q;
    long long x0 = 0, x1 = 1;

    if (m == 1) return 0;

    while (a > 1) {
        q = a / m;
        t = m;
        m = a % m;
        a = t;

        t = x0;
        x0 = x1 - q * x0;
        x1 = t;
    }

    if (x1 < 0) x1 += m0;
    return x1;
}

// Function to compute Ï†(n)
long long phi(long long p, long long q) {
    return (p - 1) * (q - 1);
}

int main() {
    long long p = 61;  // Small primes for demo
    long long q = 53;
    long long n = p * q;
    long long phi_n = phi(p, q);

    long long e = 17; // Public exponent
    long long d = modInverse(e, phi_n);

    printf("=== Original RSA Keys ===\n");
    printf("p = %lld, q = %lld\n", p, q);
    printf("n = %lld\n", n);
    printf("Public key (e, n) = (%lld, %lld)\n", e, n);
    printf("Private key (d, n) = (%lld, %lld)\n\n", d, n);

    // Bob leaks his private key
    printf("Bob leaked private key d = %lld!\n", d);

    // Attacker recovers phi(n)
    long long k = 1;
    long long recovered_phi = (e * d - 1) / k;

    printf("Attacker computes phi(n) = %lld\n", recovered_phi);

    // Attacker can recover p and q by solving:
    // x^2 - (n - phi(n) + 1)x + n = 0
    long long s = n - recovered_phi + 1;
    long long discriminant = s * s - 4 * n;
    long long sqrt_disc = (long long)sqrt(discriminant);

    long long recovered_p = (s + sqrt_disc) / 2;
    long long recovered_q = (s - sqrt_disc) / 2;

    printf("Attacker recovers primes p = %lld, q = %lld\n",
           recovered_p, recovered_q);

    printf("\nBob generates a NEW e and d but SAME n...\n");

    long long new_e = 7;
    long long new_d = modInverse(new_e, phi_n);

    printf("New public key (e2, n) = (%lld, %lld)\n", new_e, n);
    printf("New private key (d2, n) = (%lld, %lld)\n", new_d, n);

    printf("\n=== SECURITY WARNING ===\n");
    printf("This is NOT SAFE because attacker already knows p and q.\n");
    printf("Attacker can compute any new private key!\n");

    return 0;
}
